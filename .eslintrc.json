{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "no-console": "warn",
    "prefer-const": "error"
  },
  "overrides": [
    {
      "files": ["**/*.test.{ts,tsx}", "e2e/**/*.spec.ts", "vitest.setup.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
